<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeekPlanningFragment">


    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        eventTextColor="@android:color/white"
        textSize="12sp"
        hourHeight="60dp"
        headerColumnPadding="8dp"
        headerColumnTextColor="#8f000000"
        headerRowPadding="12dp"
        columnGap="8dp"
        noOfVisibleDays="3"
        headerRowBackgroundColor="#ffefefef"
        dayBackgroundColor="#05000000"
        todayBackgroundColor="#1848adff"
        headerColumnBackground="#ffffffff"/>

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

</FrameLayout>